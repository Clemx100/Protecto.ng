<svg width="32" height="32" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg">
  <!-- Main shield with metallic border -->
  <defs>
    <!-- Gradient for metallic border -->
    <linearGradient id="metallicBorder" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#e8e8e8;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#c0c0c0;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#a8a8a8;stop-opacity:1" />
    </linearGradient>
    
    <!-- Gradient for dark olive green background -->
    <linearGradient id="oliveGreen" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#2d3a2d;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1a2a1a;stop-opacity:1" />
    </linearGradient>
    
    <!-- Gradient for red chevrons -->
    <linearGradient id="redChevron" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ff4444;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#cc2222;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Outer shield border (metallic) -->
  <path d="M 4 6 L 16 3 L 28 6 L 28 26 L 16 30 L 4 26 Z" fill="url(#metallicBorder)" stroke="#ffffff" stroke-width="1"/>
  
  <!-- Inner shield body (dark olive green) -->
  <path d="M 6 8 L 16 5 L 26 8 L 26 24 L 16 28 L 6 24 Z" fill="url(#oliveGreen)" stroke="url(#metallicBorder)" stroke-width="1"/>
  
  <!-- Central banner (dark grey/black) -->
  <rect x="8" y="13" width="16" height="4" rx="1" fill="#1a1a1a" stroke="url(#metallicBorder)" stroke-width="0.5"/>
  
  <!-- PROTECTOR.NG text (simplified for small size) -->
  <text x="16" y="16" font-family="Arial, sans-serif" font-size="3" font-weight="bold" text-anchor="middle" fill="white">P.NG</text>
  
  <!-- Red chevrons at bottom -->
  <path d="M 11 20 L 13 22 L 11 24 Z" fill="url(#redChevron)"/>
  <path d="M 14 19 L 16 23 L 14 27 Z" fill="url(#redChevron)"/>
  <path d="M 19 20 L 21 22 L 19 24 Z" fill="url(#redChevron)"/>
</svg>